<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#fff">
    
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp">
    
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/mask_titlebar"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">
    <Button 
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:textSize="12dp"
        android:textColor="@color/normal_text"
        android:background="@drawable/titlebar_button_back"/>
    
    <TextView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:text="账户管理"
        android:textSize="20dp"
        android:textColor="@color/normal_text"/>
    
    <Button 
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑"
        android:textSize="12dp"
        android:textColor="@color/normal_text"
        android:background="@drawable/titlebar_button"/>
    </LinearLayout>
</RelativeLayout>

<include layout="@layout/ua_item"/>

<TextView 
    android:layout_marginTop="15dp"
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:text="添加新账号"
    android:gravity="center"
    android:textColor="@color/normal_text"
    android:background="@drawable/account_list_bg"/>
</LinearLayout>