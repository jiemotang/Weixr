<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/mask_profilebar" />

        <ImageView
            android:id="@+id/iv_me_profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/timeline_pic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="43dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_me_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="曾嵘Zoe"
                android:textColor="#333" />

            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/tv_me_gender_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男 湖南 娄底"
                android:textColor="#333"
                android:textSize="10dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="43dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/more_item_next" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="horizontal" >
	<ImageView 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@drawable/mask_titlebar"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="75dp"
                android:layout_height="55dp" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/profile_button3_1" />

                <TextView
                    android:id="@+id/tv_me_friends_count"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="-10dp"
                    android:gravity="center"
                    android:textColor="#49f"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="关注"
                    android:textColor="#333"
                    android:textSize="10dp" />
            </RelativeLayout>

            <RelativeLayout
               android:layout_width="75dp"
                android:layout_height="55dp" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/profile_button3_1" />

                <TextView
                    android:id="@+id/tv_me_followers_count"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="-10dp"
                    android:gravity="center"
                    android:textColor="#49f"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="粉丝"
                    android:textColor="#333"
                    android:textSize="10dp" />
            </RelativeLayout>

            <RelativeLayout
               android:layout_width="75dp"
                android:layout_height="55dp">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/profile_button3_1" />

                <TextView
                    android:id="@+id/tv_me_favourites_count"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="-10dp"
                    android:gravity="center"
                    android:textColor="#49f"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="收藏"
                    android:textColor="#333"
                    android:textSize="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="75dp"
                android:layout_height="55dp" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/profile_button3_1" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="更多"
                    android:textColor="#333"
                    android:textSize="10dp" />
            </RelativeLayout>
        </LinearLayout>
        
        <TextView 
            android:id="@+id/tv_me_status_count"
            android:layout_marginLeft="13dp"
            android:layout_marginBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:textSize="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>
<ListView
    android:id="@+id/lv_me"
    android:cacheColorHint="#00000000"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:footerDividersEnabled="false"
    android:divider="#eee"
    android:dividerHeight="0.1dp"
    android:layout_weight="1"/>
    
</LinearLayout>